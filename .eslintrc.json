{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["plugin:react/recommended", "airbnb"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react", "immutable"],
  "rules": {
    "react/react-in-jsx-scope": "off",
    "semi": "off",
    "immutable/no-let": "error",
    "immutable/no-this": "error",
    "immutable/no-mutation": "error"   
  }
}
